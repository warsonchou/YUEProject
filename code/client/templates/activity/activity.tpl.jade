.twelve.wide.column
  .ui.horizontal.segment
    #mainPageContent
      h4#activity-detail-title 活动详情
      #activity-detail-edit-button.ui.primary.button 修改
      #activity-detail-sponsor-info.ui.two.column.grid
        .row
          .column
            .ui.raised.segment
              #sponsor-info-name.ui.red.ribbon.label 活动名称
              p #{name}
              #sponsor-info-order-num.ui.orange.ribbon.label 预定人数
              p #{numOfPeople}
              #sponsor-info-meeting-address.ui.blue.ribbon.label 约会地点
              p #{place}
              #sponsor-info-deadline.ui.green.ribbon.label 截止时间
              p #{deadline}
              #sponsor-info-img.ui.teal.ribbon.label 封面图片
              p #{cover}
              #sponsor-info-content.ui.green.ribbon.label 内容
              p #{description}
              #sponsor-info-contact.ui.teal.ribbon.label 个人联系方式
              p 188194*****
      #activity-detail-follow
        .ui.button.blue 报名
      #activity-detail-select
        h4.ui.header 筛选人员
        table.ui.table.segment
          thead
            tr
              th 姓名
              th 联系方式
              th 信用度
          tbody
            tr.checked
              td 无特别的名字
              td 123
              td#three 2
            tr
              td 张三
              td 123123
              td 3
            tr
              td 李四
              td 123213321
              td 4
            tr
              td 王五
              td 181849****
              td 2
        .ui.button.blue 确认筛选
      #activity-detail-comment
        h4.ui.header 参与人员
        table.ui.table.segment
          thead
            tr
              th 姓名
              th 联系方式
              th 信用度
          tbody
            tr.checked
              td 无特别的名字
              td 123
              td#three 2
            tr
              td 张三
              td 123123
              td 3
            tr
              td 李四
              td 123213321
              td 4
            tr
              td 王五
              td 181849****
              td 2
        .ui.button.orange #{name}

