template(name="register")
  .login.login-register
    form(method="post")
      .ui.form.segment
        .field
          label Username
          .login-user
            i.user.icon
            input(type="text", placeholder="Username", name="username")
            .username-existed #{registerUsernameError}
        .field
          label Password
          .login-password
            i.lock.icon
            input(type="password", placeholder="Password", name="password")
        .field
          label 昵称
          .login-name
            i.users.icon
            input(type="text", placeholder="Name", name="nickname")
        .field
          label 性别
          .login-sexual
            i.male.icon
            select(name="sex")
              option(value="male") 男
              option(value="female") 女
        .field.tel
          label 手机号码
          .login-tel
            i.mobile.icon
            input(type="text", placeholder="Tel", name="tel")
        .field.qq
          label QQ
          .login-qq
            i.chat.icon
            input(type="text", placeholder="QQ", name="qq")
        .field
          label 邮箱
          .login-mail
            i.mail.icon
            input(type="text", placeholder="Mail", name="mail")
        .field.show-avatar-field
          .show-avatar
            img(src="", id="cover")
          label 头像
          .ui.input
            input(type="file", name="avatar" class="avatar-input")
        .ui.error.message
        .ui.buttons.login-button
          button.ui.positive.button.confirm.submit(type="submit") 确定
          .or
          button.ui.positive.button.register-back-login 返回
   


